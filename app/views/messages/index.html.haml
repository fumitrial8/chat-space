%aside グループを作成しました
%header.header
  %div.header__left
    %h1 user_name
    %div.settings
      = link_to "#" do
        %i.fas.fa-edit
      = link_to "#" do
        %i.fas.fa-cog
  %div.header__right
    %div.header__right__group
      %h1 Group_name
      %p 2019/07/26(Fri) 12:00:00
    %div.edit-button
      = link_to "#" do
        Edit
%div.contents-container
  %div.content-left
    = render partial: 'group'
  %div.content-right
    %div.group-messages
      = render partial: 'group_messages'
    %div.text-form
      = form_for(@message, url:"/") do |f|
        %label.label
          = fa_icon"image"
          = f.file_field :image, class: "image"
        = f.text_field :text, size: 100, :placeholder => "Type a message" 
        = f.submit "Send"